@{
    ViewBag.Title = "Salud Integral - Gestión Médica";
}

<main>
    <section class="text-center my-5">
        <h1 class="display-4">Salud Integral</h1>
        <p class="lead text-muted">Optimiza tu bienestar gestionando tus citas médicas de forma ágil, segura y personalizada, todo al alcance de un clic.</p>
    </section>

    <div class="container">
        <div class="row">
            <!-- Citas Médicas -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="card-title">Citas Médicas</h4>
                        <p class="card-text">Gestiona y consulta tus citas médicas de manera rápida y sencilla.</p>
                        <a href="@Url.Action("Index", "CitaMedicas")" class="btn btn-primary btn-lg">Ver Citas</a>
                    </div>
                </div>
            </div>

            <!-- Doctores -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="card-title">Doctores</h4>
                        <p class="card-text">Consulta y agenda citas con nuestros profesionales médicos.</p>
                        <a href="@Url.Action("Index", "Doctors")" class="btn btn-success btn-lg">Ver Doctores</a>
                    </div>
                </div>
            </div>

            <!-- Historial Médico -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="card-title">Historial Médico</h4>
                        <p class="card-text">Accede a tu historial médico y consulta tu información pasada.</p>
                        <a href="@Url.Action("Index", "HistorialMedicoes")" class="btn btn-warning btn-lg">Ver Historial</a>
                    </div>
                </div>
            </div>

            <!-- Pacientes -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="card-title">Pacientes</h4>
                        <p class="card-text">Gestiona los registros de los pacientes de forma sencilla y rápida.</p>
                        <a href="@Url.Action("Index", "Pacientes")" class="btn btn-info btn-lg">Ver Pacientes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
